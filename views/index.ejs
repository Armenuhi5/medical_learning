      <a href="/quiz?topic=heart&level=medium" class="btn btn-accent">Medium</a>
      <a href="/quiz?topic=heart&level=hard" class="btn btn-accent">Hard</a>
    </div>

    <!-- BRAIN -->
    <div class="quiz-card">

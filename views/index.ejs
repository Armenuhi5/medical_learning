      <a href="/quiz?topic=brain&level=easy" class="btn btn-accent">Easy</a>
      <a href="/quiz?topic=brain&level=medium" class="btn btn-accent">Medium</a>
      <a href="/quiz?topic=brain&level=hard" class="btn btn-accent">Hard</a>
    </div>

    <!-- SKIN -->
    <div class="quiz-card">
      <h3>Skin Quiz</h3>
